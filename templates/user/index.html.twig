{% extends 'back/index.html.twig' %}

{% block styles %}
    <link rel="stylesheet" href="{{ asset('back/assets/plugins/DataTables/media/css/DT_bootstrap.css') }}">
{% endblock %}

{% block header %}
    {{ parent() }}
{% endblock %}

{% block page_slide_left %}
    <!-- start: PAGESLIDE LEFT -->
    <a class="closedbar inner hidden-sm hidden-xs" href="#"></a>
    {{ parent() }}
    <!-- end: PAGESLIDE LEFT -->
{% endblock %}

  {% block tool_bar %}
      <!-- start: TOOLBAR -->
      <div class="toolbar row">
          <div class="col-sm-6 hidden-xs">
              <div class="page-header">
                  <h1>Control de Acceso <small>Administración de usuarios</small></h1>
              </div>
          </div>
          <div class="col-sm-6 col-xs-12"></div>
      </div>
      <!-- end: TOOLBAR -->
  {% endblock %}

{% block bread_crumb %}
    <div class="row">
        <div class="col-md-12">
            <ol class="breadcrumb">
                <li><a href="#">Administración</a></li>
                <li class="active"><a href="{{ path('admin_category') }}">Usuarios</a></li>
            </ol>
        </div>
    </div>
{% endblock %}

{% block main %}
    {{ parent() }}
{% endblock %}

{% block content %}
    <!-- start: TABLE WITH IMAGES PANEL -->
    <div class="panel-body panel-white">
        <table class="table table-striped table-hover" id="sample_1">
            <thead>
            <tr>
                <th class="center">
                    <div class="checkbox-table">
                        <label>
                            <input type="checkbox" class="flat-grey selectall">
                        </label>
                    </div>
                </th>
                <th class="center">Avatar</th>
                <th>Full Name</th>
                <th class="hidden-xs">Rol</th>
                <th class="hidden-xs">Email</th>
                <th class="hidden-xs">Activado</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% import 'macros/private/users/user.html.twig' as m %}
            {% for user in users %}
                {{ m.print_row(user) }}
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

{% block scripts %}
<script type="text/javascript" src="{{ asset('back/assets/js/table-data.js') }}"></script>
<script type="text/javascript" src="{{ asset('back/assets/js/plugin/select2.min.js') }}s"></script>
<script>
    TableData.init();
</script>
{% endblock  %}