                <th></th>
            </tr>
            </thead>
            <tbody>
            {% import 'macros/private/users/user.html.twig' as m %}
            {% for user in users %}
                {{ m.print_row(user) }}
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}