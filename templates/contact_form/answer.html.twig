{% extends 'back/index.html.twig' %}
{% block header %}
    {{ parent() }}
{% endblock %}

{% block page_slide_left %}
    <!-- start: PAGESLIDE LEFT -->
    <a class="closedbar inner hidden-sm hidden-xs" href="#"></a>
    {{ parent() }}
    <!-- end: PAGESLIDE LEFT -->
{% endblock %}

{% block tool_bar %}
      <!-- start: TOOLBAR -->
      <div class="toolbar row">
          <div class="col-sm-6 hidden-xs">
              <div class="page-header">
                  <h1>Contacto</h1>
                  <small>ver mensajes de clientes</small>
              </div>
          </div>
          <div class="col-sm-6 col-xs-12"></div>
      </div>
      <!-- end: TOOLBAR -->
  {% endblock %}

{% block bread_crumb %}
    <div class="row">
        <div class="col-md-12">
            <ol class="breadcrumb">
                <li><a href="{{ path('admin_contact_form') }}">AdministraciÃ³n</a></li>
                <li class="active">Responde a cliente</li>
            </ol>
        </div>
    </div>
{% endblock %}

{% block main %}
    {{ parent() }}
{% endblock %}

{% block content %}

    <!-- start: PAGE CONTENT -->
    <div class="row">
    <div class="col-sm-12">

        <!-- start: TEXT FIELDS PANEL -->
        <div class="panel panel-white">
            <div class="panel-heading">
                <h4 class="panel-title">Responder a <span class="text-bold">Cliente</span></h4>
            </div>
            <div class="panel-body">
                <div class="form-group">
                    <input class="form-control" type="text" value="{{ contactForm.email }}" readonly disabled>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="{{ contactForm.subject }}" readonly disabled>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="{{ contactForm.createdAt|date }}" readonly disabled>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="{{ contactForm.message }}" readonly disabled>
                </div>
                <div class="form-group">
                    {{ form_start(form) }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}