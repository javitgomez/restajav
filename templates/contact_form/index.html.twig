{% extends 'back/index.html.twig' %}

{% block header %}
    {{ parent() }}
{% endblock %}

{% block page_slide_left %}
    <!-- start: PAGESLIDE LEFT -->
    <a class="closedbar inner hidden-sm hidden-xs" href="#"></a>
    {{ parent() }}
    <!-- end: PAGESLIDE LEFT -->
{% endblock %}

{% block content %}

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    <!-- start: TABLE WITH IMAGES PANEL -->
    <div class="panel panel-white">

        <table class="table table-striped table-hover" id="sample-table-2">
            <thead>
            <tr>
                <th class="left">Cliente</th>
                <th class="center">Email</th>
                <th>Asunto</th>
                <th class="hidden-xs">Mensaje</th>
                <th class="hidden-xs">Estado</th>
                <th class="hidden-xs">Acciones</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% import 'macros/private/contact/contact.html.twig' as m %}
            {% for message in messages %}
               {{ m.print(message) }}
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}