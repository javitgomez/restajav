{% extends 'back/index.html.twig' %}
{% block header %}
    {{ parent() }}
{% endblock %}

{% block page_slide_left %}
    <!-- start: PAGESLIDE LEFT -->
    <a class="closedbar inner hidden-sm hidden-xs" href="#"></a>
    {{ parent() }}
    <!-- end: PAGESLIDE LEFT -->
{% endblock %}

{% block tool_bar %}
      <!-- start: TOOLBAR -->
      <div class="toolbar row">
          <div class="col-sm-6 hidden-xs">
              <div class="page-header">
                  <h1>Contacto</h1>
                  <small>ver mensajes de clientes</small>
              </div>
          </div>
          <div class="col-sm-6 col-xs-12"></div>
      </div>
      <!-- end: TOOLBAR -->
  {% endblock %}

{% block bread_crumb %}
    <div class="row">
        <div class="col-md-12">
            <ol class="breadcrumb">
                <li><a href="{{ path('admin_contact_form') }}">Administraci√≥n</a></li>
                <li class="active">Mensajes</li>
            </ol>
        </div>
    </div>
{% endblock %}

{% block main %}
    {{ parent() }}
{% endblock %}

{% block content %}

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    <!-- start: TABLE WITH IMAGES PANEL -->
    <div class="panel panel-white">

        <table class="table table-striped table-hover" id="sample-table-2">
            <thead>
            <tr>
                <th class="left">Cliente</th>
                <th class="center">Email</th>
                <th>Asunto</th>
                <th class="hidden-xs">Mensaje</th>
                <th class="hidden-xs">Estado</th>
                <th class="hidden-xs">Acciones</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% import 'macros/private/contact/contact.html.twig' as m %}
            {% for message in messages %}
               {{ m.print(message) }}
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}