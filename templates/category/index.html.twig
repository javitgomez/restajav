{% extends 'back/index.html.twig' %}

{% block styles %}
<link rel="stylesheet" href="{{ asset('back/assets/js/izi-modal/css/iziModal.min.css') }}" data-debug="true">
{% endblock %}

{% block header %}
    {{ parent() }}
{% endblock %}

{% block page_slide_left %}
    <!-- start: PAGESLIDE LEFT -->
    <a class="closedbar inner hidden-sm hidden-xs" href="#"></a>
    {{ parent() }}
    <!-- end: PAGESLIDE LEFT -->
{% endblock %}

{% block content %}


    <!-- start: PAGE CONTENT -->
    <div class="row">
    <div class="col-sm-12">
        <!-- start: TEXT FIELDS PANEL -->
        <div class="panel panel-white">
            <div class="panel-heading">
                <h4 class="panel-title">Añadir nueva <span class="text-bold">Categoria</span></h4>
            </div>
            <div class="panel-body">
                <div class="form-group">
                    {{ include('category/_form.html.twig') }}
                </div>
            </div>
        </div>

        <!-- start: TABLE WITH IMAGES PANEL -->
        <div class="panel panel-white">
            <table class="table table-striped table-hover" id="sample-table-2">
                <thead>
                <tr>
                    <th class="center">
                        <div class="checkbox-table">
                            <label>
                                <input type="checkbox" class="flat-grey selectall">
                            </label>
                        </div></th>
                    <th class="center">Categoria</th>
                    <th>Descripción</th>
                    <th class="hidden-xs">Total Platos</th>
                    <th class="hidden-xs">Acciones</th>
                </tr>
                </thead>
                <tbody>
                    {% import 'macros/private/category/category.html.twig' as c %}
                    {% for category in categories %}
                        {{ c.print_row(category) }}
                    {% endfor %}
                </tbody>
            </table>
        </div>

    </div>


<!-- Modal structure -->
<div id="modal" style="display: none"
data-iziModal-fullscreen="false"
data-iziModal-title="Nuevo registro"
data-iziModal-subtitle="Añadir un nuevo plato a la categoria"
data-iziModal-icon="icon-home"></div>

{% endblock %}
{% block scripts %}
<!-- fos-js-routing -->
<script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
<script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
<!-- izi-modal-->
<script src="{{ asset('back/assets/js/izi-modal/js/iziModal.min.js') }}"></script>
<script>
$(document).on('click', '.trigger', function (event) {

    event.preventDefault();

    let modal = $('#modal').iziModal({

        onOpening: function(modal){

            modal.startLoading();

            $.get(Routing.generate('admin_dish_new', true), function(data) {
                $("#modal .iziModal-content").html(data);
                $("#dish_photo").change(function(event){
                        let image = document.getElementById('output');
                        image.src = URL.createObjectURL(event.target.files[0]);
                });
                submit_form(modal);
                modal.stopLoading();
            });
        }
    });

    modal.iziModal('open');
});

function submit_form(modal)
{
    $('form').on('submit', function(event){

        event.preventDefault();
        let form = $(this);

        // you can't pass Jquery form it has to be javascript form object
        let formData = new FormData(form[0]);

        modal.startLoading();
        $.ajax({
            url : Routing.generate('admin_dish_upload', true),
            type: "POST",
            data : formData,
            processData: false,
            contentType: false,
            success:function(data, textStatus, jqXHR){
                console.log(data);
                modal.stopLoading();
            },
            error: function(jqXHR, textStatus, errorThrown){
                 console.log(errorThrown);
                 modal.stopLoading();
            }
        });

    });
}
</script>
{% endblock %}