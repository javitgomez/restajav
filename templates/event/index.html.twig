{% extends 'back/index.html.twig' %}

{% block header %}
    {{ parent() }}
{% endblock %}

{% block page_slide_left %}
    <!-- start: PAGESLIDE LEFT -->
    <a class="closedbar inner hidden-sm hidden-xs" href="#"></a>
    {{ parent() }}
    <!-- end: PAGESLIDE LEFT -->
{% endblock %}

{% block content %}
        <!-- start: TABLE WITH IMAGES PANEL -->
        <div class="panel panel-white">
            <table class="table table-striped table-hover" id="sample-table-2">
                <thead>
                <tr>
                    <th class="center">
                        <div class="checkbox-table">
                            <label>
                                <input type="checkbox" class="flat-grey selectall">
                            </label>
                        </div></th>
                    <th class="hidden-xs">Foto</th>
                    <th class="center">Título</th>
                    <th>Descripción</th>
                    <th class="hidden-xs">Precio</th>
                    <th class="hidden-xs">Visible</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% import 'macros/events/event.html.twig' as e %}
                {% for event in events %}
                    {{ e.print_row(event) }}
                {% endfor %}
                </tbody>
            </table>
        </div>
{% endblock %}