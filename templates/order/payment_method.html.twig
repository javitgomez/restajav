{% extends 'front/layout.html.twig' %}


{% block top_bar %}
    {{ parent() }}
{% endblock %}

{% block header %}
    {{ parent() }}
{% endblock %}

{% block hero %}

{% endblock %}


{% block main %}
    <main id="main">
        <section class="breadcrumbs">
            <div class="container">

                <div class="d-flex justify-content-between align-items-center">
                    <h2>Selección del método de pago</h2>
                    <ol>
                        <li><a href="{{ path('user_index') }}">Ir a catálogo</a></li>
                    </ol>
                </div>

            </div>
        </section>

        <section class="inner-page">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6">
                        <h1>Seleccionar método de pago</h1><br>
                        {{ form_start(form) }}
                        {{ form_end(form) }}
                    </div>
                    <div class="col-lg-6">
                        <div id="payment-img"></div>
                    </div>
                </div>
            </div>
        </section>

    </main><!-- End #main -->
{% endblock %}

{% block scripts %}
    <!--[if gte IE 9]><!-->
    <script src="{{ asset('back/assets/plugins/jQuery/jquery-2.1.1.min.js') }}"></script>
    <!-- fos-js-routing -->
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
    <script>
        $(document).ready(function(){
           $('#payment_paymentMethod').on('change',function(){
               let payment = $(this).val();
               if( payment == 'bank_account') {
                   $('#payment-img').html('Ingresar el importe de <b>{{ order.total }}&euro;</b> con el el asunto <b>RESTAJAV-{{ order.id }}</b>  en el siguiente número de cuenta : <br><br> <b>ES12 1234 1234 12 123456789</b>');
                   return;
               };
               let img = '<img style="width:250px;" src=\'/back/assets/images/payment-' + payment + '.jpg\' alt="payment">';
               $('#payment-img').html(img);
               console.log(img);
           });
        })
    </script>
{% endblock %}