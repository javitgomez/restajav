{% macro print_row(category) %}
    <tr>
        <td class="center">
            <div class="checkbox-table">
                <label>
                    <input type="checkbox" class="flat-grey foocheck">
                </label>
            </div>
        </td>
        <td class="center">{{ category.name }}</td>
        <td>{{ category.description }}</td>
        <td class="hidden-xs">{{ category.dish|length }}</td>
        <td class="hidden-xs">
            <a href="{{ path('admin_category_edit',  { 'id': category.id } ) }}" class="btn btn-xs btn-grey tooltips" data-placement="top" data-original-title="Ver"><i class="fa fa-search"></i></a> 
            <a data-id-category="{{ category.id }}" class="del-action btn btn-xs btn-red tooltips" href="javascript:void(0);" style="cursor:pointer;" data-placement="top" data-original-title="Eliminar registro"><i class="fa fa-times fa fa-white"></i></a>
        </td>
    </tr>
{% endmacro %}