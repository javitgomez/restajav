{% macro print_row(chef) %}
    <tr>
        <td class="center">
            <div class="checkbox-table">
                <label>
                    <input type="checkbox" class="flat-grey foocheck">
                </label>
            </div></td>
        <td class="center"><img style="border:1px solid darkorange" width="64" src="{{ asset('uploads/chefs_photo/' ~ chef.image ) }}" alt="image"/></td>
        <td>{{ chef.name }}</td>
        <td>{{ chef.job }}</td>
        <td class="center">
            <div class="visible-md visible-lg hidden-sm hidden-xs">
                <a href="{{ path('admin_chef_edit',  { 'id': chef.id } ) }}" class="btn btn-xs btn-blue tooltips" data-placement="top" data-original-title="Edit"><i class="fa fa-edit"></i></a>
                <a href="{{ path('admin_chef_delete_by_list',{ 'id': chef.id } ) }}" class="btn btn-xs btn-red tooltips" data-placement="top" data-original-title="Remove"><i class="fa fa-times fa fa-white"></i></a>
            </div>
            <div class="visible-xs visible-sm hidden-md hidden-lg">
                <div class="btn-group">
                    <a class="btn btn-green dropdown-toggle btn-sm" data-toggle="dropdown" href="#">
                        <i class="fa fa-cog"></i> <span class="caret"></span>
                    </a>
                    <ul role="menu" class="dropdown-menu pull-right dropdown-dark">
                        <li>
                            <a role="menuitem" tabindex="-1" href="{{ path('admin_chef_edit',  { 'id': chef.id } ) }}">
                                <i class="fa fa-edit"></i> Edit
                            </a>
                        </li>
                        <li>
                            <a role="menuitem" tabindex="-1" href="{{ path('admin_chef_delete_by_list',{ 'id': chef.id } ) }}">
                                <i class="fa fa-times"></i> Remove
                            </a>
                        </li>
                    </ul>
                </div>
            </div></td>
    </tr>
{% endmacro %}