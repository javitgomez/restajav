{% macro print_row(user) %}
    <tr>
        <td class="center">
            <div class="checkbox-table">
                <label>
                    <input type="checkbox" class="flat-grey foocheck">
                </label>
            </div>
        </td>
        <td class="center"><img width="64" src="https://png.pngtree.com/png-vector/20190501/ourmid/pngtree-users-icon-design-png-image_1014936.jpg" alt="image"/></td>
        <td>{{ user.username }}</td>
        <td class="hidden-xs">{{ user.roles|role }}</td>
        <td class="hidden-xs">
            <a href="#" rel="nofollow" target="_blank">
                {{ user.email }}
            </a>
        </td>
        <td>{{ user.active|active|raw }}</td>
        <td class="center">
            <div class="visible-md visible-lg hidden-sm hidden-xs">
                <a href="{{ path('admin_user_show',  { 'id': user.id } ) }}" class="btn btn-xs btn-grey tooltips" data-placement="top" data-original-title="Ver"><i class="fa fa-search"></i></a>
                <a href="{{ path('admin_user_edit',  { 'id': user.id } ) }}" class="btn btn-xs btn-blue tooltips" data-placement="top" data-original-title="Edit"><i class="fa fa-edit"></i></a>
                <a href="{{ path('admin_user_delete_by_list',{ 'id': user.id } ) }}" class="btn btn-xs btn-red tooltips" data-placement="top" data-original-title="Remove"><i class="fa fa-times fa fa-white"></i></a>
            </div>
            <div class="visible-xs visible-sm hidden-md hidden-lg">
                <div class="btn-group">
                    <a class="btn btn-green dropdown-toggle btn-sm" data-toggle="dropdown" href="#">
                        <i class="fa fa-cog"></i> <span class="caret"></span>
                    </a>
                    <ul role="menu" class="dropdown-menu pull-right dropdown-dark">
                        <li>
                            <a role="menuitem" tabindex="-1" href="{{ path('admin_user_show',  { 'id': user.id } ) }}">
                                <i class="fa fa-search"></i> Ver
                            </a>
                        </li>
                        <li>
                            <a role="menuitem" tabindex="-1" href="{{ path('admin_user_edit',  { 'id': user.id } ) }}">
                                <i class="fa fa-edit"></i> Editar
                            </a>
                        </li>
                        <li>
                            <a role="menuitem" tabindex="-1" href="{{ path('admin_user_delete_by_list',{ 'id': user.id } ) }}">
                                <i class="fa fa-times"></i> Eliminar
                            </a>
                        </li>
                    </ul>
                </div>
            </div></td>
    </tr>
{%  endmacro %}