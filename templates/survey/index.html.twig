{% extends 'back/index.html.twig' %}

{% block styles %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.css">
{% endblock %}

{% block header %}
    {{ parent() }}
{% endblock %}

{% block page_slide_left %}
    <!-- start: PAGESLIDE LEFT -->
    <a class="closedbar inner hidden-sm hidden-xs" href="#"></a>
    {{ parent() }}
    <!-- end: PAGESLIDE LEFT -->
{% endblock %}

{% block tool_bar %}
      <!-- start: TOOLBAR -->
      <div class="toolbar row">
          <div class="col-sm-6 hidden-xs">
              <div class="page-header">
                  <h1>Encuestas</h1>
                  <small>de satifacción</small>
              </div>
          </div>
          <div class="col-sm-6 col-xs-12"></div>
      </div>
      <!-- end: TOOLBAR -->
  {% endblock %}

{% block bread_crumb %}
    <div class="row">
        <div class="col-md-12">
            <ol class="breadcrumb">
                <li><a href="{{path('admin_survey_index')}}">Administración</a></li>
                <li class="active">>Encuestas</li>
            </ol>
        </div>
    </div>
{% endblock %}

{% block main %}
    {{ parent() }}
{% endblock %}

{% block content %}
<div class="panel-body panel-white">
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    {% if surveys is not empty %}
        <h1 style="background-color:whitesmoke;color:darkorange;">Encuestas añadidas</h1>
         <table class="table table-striped table-hover" id="sample-table-2">
                <thead>
                <tr>
                    <th class="center">
                        <div class="checkbox-table">
                            <label>
                                <input type="checkbox" class="flat-grey selectall">
                            </label>
                        </div></th>
                    <th class="hidden-xs">User</th>
                    <th class="center">Valoración</th>
                    <th>Satisfacción</th>
                    <th class="hidden-xs">Comentario</th>
                    <th class="hidden-xs">Publicar</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% import 'macros/private/surveys/survey.html.twig' as s %}
                {% for survey in surveys %}
                    {{ s.print_row(survey) }}
                {% endfor %}
                </tbody>
            </table>
    {% else %}
        <h2>No existen encuestas para publicar</h2>
    {% endif %}

</div>
{% endblock %}

{% block scripts %}
  
{% endblock  %}